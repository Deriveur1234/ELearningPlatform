@model ELearningPlatform.Models.User
@using static ELearningPlatform.Data.TempDataHelper

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>E-learning Platform</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div style="height: 100vh;" class=" animated fadeIn">
        <div class="flex-center flex-column">
            <div class="auth-content">
                <div class="logo mb-5">
                    <a asp-controller="home" asp-action="Index">
                        <img src="~/img/logo.png" class="img-fluid" alt="Application Logo">
                    </a>
                </div>
                <form method="get" asp-controller="Account" asp-action="SignUp">
                    <div class="card mb-2">
                        <div class="card-body">

                            <div asp-validation-summary="ModelOnly" class="text-danger">@TempData[TempdataKeyErrorMessage]</div>
                            <div class="md-form">
                                <label asp-for="Email" id="Email"></label>
                                <input asp-for="Email" class="form-control" for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="md-form">
                                <label asp-for="Username" id="Username"></label>
                                <input asp-for="Username" class="form-control" for="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="md-form">
                                <label asp-for="Password" class="control-label"></label>
                                <input type="password" asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-default btn-sm mb-3 btn-block" />
                        <span class="small-link">Already have an account?</span>
                        <a asp-controller="Home" asp-action="Login" class="small-link">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="js/mdb.min.js"></script>

</body>
</html>

